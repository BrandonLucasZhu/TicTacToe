<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scenic_background"

    >

    <!--Table Layout with 3 rows and each row with 3 buttons-->
    <TableLayout
        android:id="@+id/glGameBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvInfo"
        android:rowCount="3"
        android:columnCount="3"
        android:padding="8dp"
        >

        <!--Row 1-->
        <TableRow>

            <Button
                android:id="@+id/t00"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/molang_neutral"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                />

            <Button
                android:id="@+id/t01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/molang_neutral"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                />

            <Button
                android:id="@+id/t02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/molang_neutral"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                />

        </TableRow>

        <!--Row 2-->
        <TableRow>

            <Button
                android:id="@+id/t10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/molang_neutral"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                />

            <Button
                android:id="@+id/t11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/molang_neutral"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                />

            <Button
                android:id="@+id/t12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/molang_neutral"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                />

        </TableRow>

        <!--Row 3-->
        <TableRow>

            <Button
                android:id="@+id/t20"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/molang_neutral"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                />

            <Button
                android:id="@+id/t21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/molang_neutral"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                />

            <Button
                android:id="@+id/t22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/molang_neutral"
                android:gravity="center"
                android:layout_margin="8dp"
                style="@style/Widget.AppCompat.Button"
                />

        </TableRow>

    </TableLayout>

    <!--TextView to show user turns and winner-->
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#424242"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:padding="8dp"
        />


</RelativeLayout>